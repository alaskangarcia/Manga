<UserControl x:Class="Manga.Controlls.views.standardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manga.Controlls.views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MouseUp="UserControl_MouseUp"
             Focusable="True"
             KeyDown="Page_KeyDown">
    <Grid>
        <Image x:Name="pageDisplay"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".25*"/>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".25*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="leftSubGrid"  Background="Transparent">
                <TextBlock x:Name="chapterCountText" VerticalAlignment="Bottom" Height="25" Text="test" Visibility="Visible" FontSize="20" Foreground="#FFF"/>
            </Grid>
            <Grid x:Name="rightSubGrid" Grid.Column="2" Background="Transparent"/>
        </Grid>
    </Grid>
</UserControl>
