<UserControl x:Class="Manga.Controlls.cButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manga.Controlls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             MouseUp="UserControl_MouseUp"
             x:Name="root">
    <Grid HorizontalAlignment="Stretch">
        <Border Width="auto" Height="auto" Background="{Binding Background, ElementName=root}" x:Name="baseBorder">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="{Binding TextAlignment, ElementName=root}" Background="Transparent" Foreground="{Binding Foreground, ElementName=root}" Text="{Binding Text, ElementName=root}"></TextBlock>
        </Border>  
    </Grid>
</UserControl>
